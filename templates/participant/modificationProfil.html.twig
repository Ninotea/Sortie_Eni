{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="d-flex flex-column flex-lg-row myColor m-2 p-4 rounded ">
        <div>
            <h1 class="text-center p-2">Mon profil</h1>
            {{ form_start(form) }}
            {% do form.administrateur.setRendered() %}
            {% do form.agreeTerms.setRendered() %}
            {% do form.actif.setRendered() %}
            {% do form.leCampus.setRendered() %}

            <div class="d-flex flex-row justify-content-between">{{ form_label(form.pseudo) }}{{ form_widget(form.pseudo) }}</div>
            <div class="d-flex flex-row justify-content-between">{{ form_label(form.prenom) }}{{ form_widget(form.prenom) }}</div>
            <div class="d-flex flex-row justify-content-between">{{ form_label(form.nom) }}{{ form_widget(form.nom) }}</div>
            <div class="d-flex flex-row justify-content-between">{{ form_label(form.telephone) }}{{ form_widget(form.telephone) }}</div>
            <div class="d-flex flex-row justify-content-between">{{ form_label(form.email) }}{{ form_widget(form.email) }}</div>
            <div class="d-flex flex-row justify-content-between">{{ form_widget(form.plainPassword) }}</div>
        </div>
        <div class="d-flex flex-column justify-content-center p-4">
            <div>
                {{ form_row(form.Modifier,{attr : {class : 'btn w-100'}}) }}
                {% if is_granted("ROLE_ADMIN") %}
                    {{ form_row(form.Supprimer,{attr : {class : 'btn w-100'}}) }}
                    {{ form_row(form.Desactiver,{attr : {class : 'btn w-100'}}) }}
                {% endif %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block title %}

{% endblock %}
